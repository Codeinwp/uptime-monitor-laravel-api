{
    "name": "spatie/uptime-monitor-app",
    "description": "Uptime monitor",
    "keywords": ["uptime", "monitor", "laravel", "spatie"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.0"
    },
    "scripts": {
        "post-root-package-install": [

        ],
        "post-create-project-cmd": [
            "php -r \"file_exists('laravel/.env') || copy('laravel/.env.example', 'laravel/.env');\"",
            "ln -s laravel/.env .env",
            "ln -s laravel/config/laravel-uptime-monitor.php configuration.php",
            "ln -s laravel/artisan artisan",
            "touch database.sqlite",
            "cd laravel && composer install",
            "cd laravel && php artisan key:generate",
            "cd laravel && php artisan optimize",
            "cd laravel && php artisan migrate --force",
            "echo 'Thank your for installing the uptime monitor.'",
            "echo 'Complete your installation by performing these steps.'",
            "echo ''",
            "echo '1. You should add the following command to your cron table. It should run'",
            "echo 'every minute:'",
            "echo '---'",
            "echo \"php ${pwd}/artisan schedule:run \"",
            "echo '---'",
            "echo ''",
            "echo '2. Specify a Slack webhook url in the notifications.slack.url key'",
            "echo \"in ${pwd}/configuration.php \"",
            "echo ''",
            "echo '3. Add your first monitor by running:'",
            "echo '---'",
            "echo \"php ${pwd}/artisan monitor:create \"",
            "echo '---'",
            "echo ''",
            "echo 'You'll find full documentation at https://github.com/spatie/uptime-monitor-app'",
            "echo 'Happy monitoring!'"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
